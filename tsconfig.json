{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "types": ["@vitest/browser/matchers"]
  },
  "include": ["src"]
}
